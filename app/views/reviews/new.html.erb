<h1>Leave a review for <%= @restaurant.name %></h1>

<%= form_for([@restaurant, @review]) do |f| %>

  <% if @review.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :rating %>
  <%= f.select :rating, Review::RATING%>

  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>


<%= link_to "Never mind, I just wanna go back!", root_path %>
