<h2>Please add your new restaurant!</h2>

<%= form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>

  <%= f.label :category %>
  <%= f.select :category, @category %>

  <%= f.submit %>
<% end %>

<%= link_to "Never mind, I just wanna go back!", root_path %>

